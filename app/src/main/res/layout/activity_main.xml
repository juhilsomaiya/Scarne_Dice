<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.root.scarnedice.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Score :"
        android:id="@+id/yourScoreLable"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/yourScoreValue"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp"
        android:layout_alignTop="@+id/yourScoreLable"
        android:layout_toRightOf="@+id/yourScoreLable"
        android:layout_toEndOf="@+id/yourScoreLable"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Computer Score :"
        android:id="@+id/computerScoreLable"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/computerScoreValue"
        android:layout_toStartOf="@+id/computerScoreValue"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/computerScoreValue"
        android:textColor="#000000"
        android:layout_alignBaseline="@+id/computerScoreLable"
        android:layout_alignBottom="@+id/computerScoreLable"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/diceView"
        android:src="@drawable/bluedice1"
        android:layout_above="@+id/mode"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roll"
        android:id="@+id/rollButton"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/mode"
        android:layout_alignLeft="@+id/yourTurnScoreLable"
        android:layout_alignStart="@+id/yourTurnScoreLable"
        android:allowUndo="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOLD"
        android:id="@+id/holdButton"
        android:layout_alignBottom="@+id/rollButton"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/resetButton"
        android:layout_alignBottom="@+id/holdButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Turn Score :"
        android:id="@+id/yourTurnScoreLable"
        android:layout_marginTop="35dp"
        android:textColor="#000000"
        android:layout_below="@+id/rollButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/yourTurnScoreValue"
        android:textColor="#000000"

        android:layout_alignBaseline="@+id/yourTurnScoreLable"
        android:layout_alignBottom="@+id/yourTurnScoreLable"
        android:layout_toLeftOf="@+id/holdButton"
        android:layout_toStartOf="@+id/holdButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Computer Current Score :"
        android:id="@+id/compTurnScoreLable"
        android:layout_alignTop="@+id/yourTurnScoreValue"
        android:layout_alignRight="@+id/computerScoreLable"
        android:layout_alignEnd="@+id/computerScoreLable"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/compTurnScoreValue"
        android:layout_alignBaseline="@+id/compTurnScoreLable"
        android:layout_alignBottom="@+id/compTurnScoreLable"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#000000" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mode Changer "
        android:id="@+id/mode"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/diceView"
        android:layout_alignEnd="@+id/diceView" />

</RelativeLayout>
